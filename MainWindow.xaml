<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Among Us Escape" Height="700" Width="1000">
    <Grid>
        <!-- Game Canvas -->
        <Canvas x:Name="GameCanvas" Background="Black" Width="1250" Height="750" />

        <!-- Score and Timer Display -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"> 
            <TextBlock x:Name="ScoreText" FontSize="20" Foreground="White" Margin="0,0,20,0" />
            <TextBlock x:Name="TimerText" FontSize="20" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
